<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LoLStatsMaui.Views.LolAccountOverviewPage"
             BackgroundColor="#0A1428">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" Spacing="0" Margin="0,40,0,0">

            <!-- Profilbild med level overlay -->
            <Grid HorizontalOptions="Start">
                <Image 
                Source="{Binding ProfileImage}"
                WidthRequest="90"
                HeightRequest="90"
                Aspect="AspectFill">
                    <Image.Clip>
                        <RoundRectangleGeometry Rect="0,0,90,90" CornerRadius="8"/>
                    </Image.Clip>
                </Image>

                <!-- Level badge som overlappar nederkanten -->
                <Border 
                BackgroundColor="#C89B3C"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Padding="8,2"
                Margin="0,0,0,-10"
                StrokeShape="RoundRectangle 10">
                    <Label 
                    Text="{Binding Summoner.Level}"
                    TextColor="#1A1A2E"
                    FontSize="12"
                    FontAttributes="Bold"/>
                </Border>
            </Grid>

            <!-- Namn och tag -->
            <HorizontalStackLayout Spacing="6" Margin="0,18,0,0">
                <Label 
                Text="{Binding Summoner.SummonerName}"
                TextColor="White"
                FontSize="22"
                FontAttributes="Bold"/>
                <Label 
                Text="{Binding Summoner.TagLine, StringFormat='#{0}'}"
                TextColor="#8A8A9A"
                FontSize="14"
                VerticalOptions="End"
                Margin="0,0,0,3"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Grid>


</ContentPage>